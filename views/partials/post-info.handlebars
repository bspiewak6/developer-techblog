<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
    <span>({{format_url post_content}})</span>
  </div>
  <div class="meta">
    Posted by {{user.username}} on {{format_date created_at}}
    |
    {{comments.length}} {{format_plural "comment" comments.length}}
    {{!-- comment(s) --}}
  </div>
</article>